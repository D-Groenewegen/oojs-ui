<?xml version="1.0"?>
<ruleset name="OOjs UI">
	<rule ref="vendor/mediawiki/mediawiki-codesniffer/MediaWiki"/>
	<file>.</file>
	<arg name="encoding" value="UTF-8"/>
	<arg name="extensions" value="php"/>
	<exclude-pattern>build</exclude-pattern>
	<exclude-pattern>coverage</exclude-pattern>
	<exclude-pattern>vendor</exclude-pattern>
	<!-- We want demos/demos.php to stay compatible with PHP 5.3 for now, because we do a version
	     check in it and need it to be able to print an error message -->
	<rule ref="Generic.Arrays.DisallowLongArraySyntax">
		<exclude-pattern>demos/demos.php</exclude-pattern>
	</rule>
</ruleset>
